<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MessageRead"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:schemaLocation="http://schemas.microsoft.com/office/appforoffice/1.1 OfficeAppManifest.xsd">

  <Id>f04b9c29-b0d1-406c-9a70-hellohello123456</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Hello Add-in"/>
  <Description DefaultValue="A simple Outlook add-in that opens a hello pane."/>
  <IconUrl DefaultValue="https://teachforaustralia.github.io/outlook-hello-test/assets/icon-32.png"/>
  <SupportUrl DefaultValue="https://teachforaustralia.github.io/outlook-hello-test"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="MessageRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://teachforaustralia.github.io/outlook-hello-test/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  
  <VersionOverrides Version="1.0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host Name="Mailbox">
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="msgReadGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="msgReadOpenPaneButton">
                <Label resid="paneButtonLabel"/>
                <Supertip>
                  <Title resid="paneButtonTitle"/>
                  <Description resid="paneButtonDesc"/>
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="icon32"/>
                  <bt:Image size="32" resid="icon32"/>
                  <bt:Image size="80" resid="icon32"/>
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="taskpaneUrl"/>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon32" DefaultValue="https://teachforaustralia.github.io/outlook-hello-test/assets/icon-32.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://teachforaustralia.github.io/outlook-hello-test/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Hello Tools"/>
        <bt:String id="paneButtonLabel" DefaultValue="Say Hello"/>
        <bt:String id="paneButtonTitle" DefaultValue="Say Hello"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonDesc" DefaultValue="Open the hello pane"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
